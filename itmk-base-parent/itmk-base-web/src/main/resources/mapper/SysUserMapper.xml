<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.itmk.system.sys_user.mapper.SysUserMapper">
    <!-- 添加 findByUsername 查询 -->
    <select id="findByUsername" resultType="com.itmk.system.sys_user.entity.SysUser">
        SELECT * FROM sys_user WHERE username = #{username}
    </select>
</mapper>